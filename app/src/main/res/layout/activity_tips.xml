<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23774C"
    tools:context=".TipsActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/happy_monkey"
        android:text="@string/tips_for_adventurers"
        android:textColor="#E1101010"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/advice" />

    <Button
        android:id="@+id/tent_btn"
        android:layout_width="90dp"
        android:layout_height="47dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#027776"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/tent"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/common_info_btn"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/common_info_btn"
        android:layout_width="90dp"
        android:layout_height="47dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="#027776"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/common_info"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="SmallSp,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/food_btn"
        android:layout_width="91dp"
        android:layout_height="47dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#027776"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/food"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tent_btn"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/bonfire_btn"
        android:layout_width="91dp"
        android:layout_height="47dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#027776"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/bonfire"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_btn"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tip_view"
        android:layout_width="220dp"
        android:layout_height="356dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:background="#FFFFFFFF"
        android:fontFamily="@font/opensans_regular"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:text="@string/text_view_tips"
        android:textColor="#252020"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toEndOf="@+id/tent_btn"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.258" />


</androidx.constraintlayout.widget.ConstraintLayout>