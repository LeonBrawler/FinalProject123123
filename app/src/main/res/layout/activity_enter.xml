<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/enterScreenColor"
    tools:context=".EnterActivity"

    >

    <TextView
        android:id="@+id/TravelGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:backgroundTint="#B89E9E"
        android:fontFamily="@font/happy_monkey"
        android:text="@string/title"
        android:textColor="@color/textColor"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="110dp"
        android:layout_height="102dp"
        android:layout_marginBottom="20sp"
        app:layout_constraintBottom_toTopOf="@+id/TravelGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hiking" />

    <!-- Go to weather -->
    <Button
        android:id="@+id/to_weather_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#825A5A5A"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/weather"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TravelGuide" />

    <!-- Go to tips -->

    <Button
        android:id="@+id/to_tips_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#825A5A5A"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/tips"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_weather_btn" />

    <!-- Go to flashlight -->
    <Button
        android:id="@+id/to_flashlight_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#825A5A5A"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/flashlight"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_tips_btn" />

    <!-- Go to maps -->
    <Button
        android:id="@+id/to_maps_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#825A5A5A"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/map_"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_flashlight_btn" />

    <!-- Button to compass -->
    <Button
        android:id="@+id/to_compass_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#825A5A5A"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/compass"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_maps_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>